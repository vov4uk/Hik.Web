
@model List<HikConsole.DataAccess.Data.Video>

<h2>Videos</h2>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model[0].StartTime)</th>
            <th>@Html.DisplayNameFor(model => model[0].StopTime)</th>
            <th>@Html.DisplayNameFor(model => model[0].Size)</th>
            <th>@Html.DisplayNameFor(model => model[0].DownloadStartTime)</th>
            <th>@Html.DisplayNameFor(model => model[0].DownloadStopTime)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string videoSize = HikConsole.Helpers.Utils.FormatBytes(item.Size);
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                <td>@Html.DisplayFor(modelItem => item.StopTime)</td>
                <td>@videoSize</td>
                <td>@Html.DisplayFor(modelItem => item.DownloadStartTime)</td>
                <td>@Html.DisplayFor(modelItem => item.DownloadStopTime)</td>
            </tr>
        }
    </tbody>
</table>