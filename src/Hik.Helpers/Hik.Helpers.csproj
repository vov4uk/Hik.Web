  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="FFMpeg\ffmpeg.exe" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="FFMpeg\ffmpeg.exe">
