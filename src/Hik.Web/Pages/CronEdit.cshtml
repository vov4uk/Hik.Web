@page
@model Hik.Web.Pages.CronEditModel

@{ ViewData["Title"] = "Edit"; }

@{
    var selectList = new SelectList(
        new List<SelectListItem>
        {
            new SelectListItem {Text = "Archive", Value = "Archive"},
            new SelectListItem {Text = "FtpUploader", Value = "FtpUploader"},
            new SelectListItem {Text = "GarbageCollector", Value = "GarbageCollector"},
            new SelectListItem {Text = "HikVideoDownloader", Value = "HikVideoDownloader"},
            new SelectListItem {Text = "HikPhotoDownloader", Value = "HikPhotoDownloader"},
            new SelectListItem {Text = "DbMigration", Value = "DbMigration"}, 
        }, "Value", "Text");
}

@{
    var title =$"{@Model.Dto.Cron.Group}.{@Model.Dto.Cron.Name}";
<div class="row">
    <div class="card-body text-center">
        <h2 class="card-title">@title</h2>
    </div>
</div>
}
<div>
    <a asp-page="./Scheduler">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            @if(!string.IsNullOrEmpty(Model.Dto.Cron.Name))
            {
                <input type="hidden" asp-for="Dto.Cron.Name" />
                <input type="hidden" asp-for="Dto.Cron.Group" />
            }
            else
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.Dto.Cron.Group)
                    <input asp-for="Dto.Cron.Group" class="form-control"/>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Dto.Cron.Name)
                    <input asp-for="Dto.Cron.Name" class="form-control"/>
                </div>
            }

            <div class="form-group">
                <label asp-for="Dto.Cron.Expression" class="control-label"></label>
                <input asp-for="Dto.Cron.Expression" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Dto.Cron.Description" class="control-label"></label>
                <input asp-for="Dto.Cron.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Dto.Cron.ClassName" class="control-label"></label>
                @Html.DropDownListFor(x=>Model.Dto.Cron.ClassName, selectList, "", new { @class = "form-control"})
            </div>
            <div class="form-group">
                <label asp-for="Dto.Cron.ConfigPath" class="control-label"></label>
                <input asp-for="Dto.Cron.ConfigPath" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Dto.Cron.RunAsTask" class="control-label"></label>
                @Html.CheckBoxFor(m => m.Dto.Cron.RunAsTask)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

