@page
@using Hik.DTO.Config;
@using Hik.Web.Pages.Config;
@model CameraModel
<div>
    <a asp-page="/Scheduler">Back to List</a>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
           <h2>Camera Config</h2>
            <div class="form-group">
                @Html.HiddenFor(x => x.Id)
            </div>
            @Html.ValidationDiv()

           <div class="form-group">
               <label asp-for="@Model.Config.Timeout" class="control-label"></label>
               <input asp-for="@Model.Config.Timeout" class="form-control" />
           </div>
           <div class="form-group">
               <label asp-for="@Model.Config.DestinationFolder" class="control-label"></label>
               <input asp-for="@Model.Config.DestinationFolder" class="form-control" />
           </div>
            <fieldset>
                <legend>Device:</legend>
            <div class="form-group">
                <label asp-for="@Model.Config.Camera.IpAddress" class="control-label"></label>
                <input asp-for="@Model.Config.Camera.IpAddress" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Config.Camera.PortNumber" class="control-label"></label>
                <input asp-for="@Model.Config.Camera.PortNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Config.Camera.UserName" class="control-label"></label>
                <input asp-for="@Model.Config.Camera.UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Config.Camera.Password" class="control-label"></label>
                <input asp-for="@Model.Config.Camera.Password" class="form-control" />
            </div>
            </fieldset>

            <div class="form-group">
                <label asp-for="@Model.Config.ProcessingPeriodHours" class="control-label"></label>
                <input asp-for="@Model.Config.ProcessingPeriodHours" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Config.ClientType" class="control-label"></label>
                @Html.DropDownListFor(model => model.Config.ClientType, @Html.GetEnumSelectList<ClientType>(), "", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="@Model.Config.RemotePath" class="control-label"></label>
                <input asp-for="@Model.Config.RemotePath" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Config.SaveFilesToRootFolder" class="control-label"></label>
                @Html.CheckBoxFor(m => m.Config.SaveFilesToRootFolder)
            </div>
            <div class="form-group">
                <label asp-for="@Model.Config.SyncTime" class="control-label"></label>
                @Html.CheckBoxFor(m => m.Config.SyncTime)
            </div>
            <div class="form-group">
                <label asp-for="@Model.Config.SyncTimeDeltaSeconds" class="control-label"></label>
                <input asp-for="@Model.Config.SyncTimeDeltaSeconds" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}