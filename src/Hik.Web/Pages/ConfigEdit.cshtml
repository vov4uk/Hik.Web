@page
@model Hik.Web.Pages.ConfigEditModel
@{ ViewData["Title"] = "Edit"; }

@{
    var title =$"{@Model.Dto.ConfigDTO.JobName}";
<div class="row">
    <div class="card-body text-center">
        <h2 class="card-title">@title</h2>
    </div>
</div>
}

<div>
    <button onclick="javascript:history.back()">Go Back</button>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Dto.ConfigDTO.Path" />
            <input type="hidden" asp-for="Dto.ConfigDTO.Json" />
            <div class="form-group">
                @Html.LabelFor(model => model.Dto.ConfigDTO.Json)
                @Html.TextAreaFor(model => model.Dto.ConfigDTO.Json, new { @class = "form-control", @rows = 20 })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>