@using Hik.DTO.Config;
@model CameraConfig

<h2>Camera</h2>

@await Html.PartialAsync("_BaseConfig.cshtml", Model)
@await Html.PartialAsync("_DeviceConfig.cshtml", Model.Camera)

<div class="form-group">
    <label asp-for="@Model.ProcessingPeriodHours" class="control-label"></label>
    <input asp-for="@Model.ProcessingPeriodHours" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="@Model.ClientType" class="control-label"></label>
    @Html.DropDownListFor(model => model.ClientType, @Html.GetEnumSelectList<ClientType>(), "", new { @class = "form-control" })
</div>
<div class="form-group">
    <label asp-for="@Model.RemotePath" class="control-label"></label>
    <input asp-for="@Model.RemotePath" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="@Model.SaveFilesToRootFolder" class="control-label"></label>
    @Html.CheckBoxFor(m => m.SaveFilesToRootFolder)
</div>
<div class="form-group">
    <label asp-for="@Model.SyncTime" class="control-label"></label>
    @Html.CheckBoxFor(m => m.SyncTime)
</div>
<div class="form-group">
    <label asp-for="@Model.SyncTimeDeltaSeconds" class="control-label"></label>
    <input asp-for="@Model.SyncTimeDeltaSeconds" class="form-control" />
</div>