@page
@model Hik.Web.Pages.CronAddModel
@{ ViewData["Title"] = "New"; }

<h4>New cron trigger</h4>
<div>
    <a asp-page="./Scheduler">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                @Html.LabelFor(model => model.CronDTO.Group)
                <input asp-for="CronDTO.Group" class="form-control"/>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CronDTO.Name)
                <input asp-for="CronDTO.Name" class="form-control"/>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CronDTO.Cronexpression)
                <input asp-for="CronDTO.Cronexpression" class="form-control"/>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CronDTO.Description)
                <input asp-for="CronDTO.Description" class="form-control"/>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CronDTO.Job)
                <input asp-for="CronDTO.Job" class="form-control"/>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CronDTO.ConfigPath)
                <input asp-for="CronDTO.ConfigPath" class="form-control"/>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CronDTO.RunAsTask)
                <input asp-for="CronDTO.RunAsTask" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
