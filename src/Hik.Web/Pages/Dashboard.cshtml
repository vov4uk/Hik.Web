@page
@model Hik.Web.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

@if (Model.Cameras != null && Model.Cameras.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cameras.FirstOrDefault().Alias)</th>
                <th>@Html.DisplayNameFor(model => model.Cameras.FirstOrDefault().LastSync)</th>
                <th>Latest</th>
                <th>Files</th>
                <th>Size</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cameras)
            {
            var statSize = Model.Statistics.FirstOrDefault(x => x.CameraId == item.Id)?.FilesSize ?? 0;
            string size = Hik.Client.Helpers.Utils.FormatBytes(statSize);
                <tr>
                    <td><a asp-page="./Statistic" asp-route-cameraId="@item.Id">@Html.DisplayFor(modelItem => item.Alias)</a></td>
                    <td>@Html.DisplayFor(modelItem => item.LastSync)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Files.FirstOrDefault(x => x.CameraId == item.Id).Date)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Statistics.FirstOrDefault(x => x.CameraId == item.Id).FilesCount)</td>
                    <td>@size</td>
                </tr>
            }
        </tbody>
    </table>
}